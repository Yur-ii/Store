@model Store.Models.User
@if (Model != null)
{
    <div class="btn btn-light dropdown-toggle" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <div class="float-left" id="UserNameNavbar">@User.Identity.Name</div>
        <img   class="roundLoginImg" style='width:50px; height:50px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
    </div>
}
else
{
    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        @User.Identity.Name
    </a>
}
<style>
    .roundLoginImg {
        border-radius: 50px;
    }
    #UserNameNavbar {
        font: 1.2em "Fira Sans", sans-serif;
        margin-top: 10%;
        margin-right: 20px;
    }
</style>
