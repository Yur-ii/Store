@model Store.Models.Category
<h3>Create category</h3>
<div class="row justify-content-center align-items-center text-center">
    <form id="formCategory" method="post" asp-action="CreateCategory" asp-controller="Products">
        <div>
            <input class="form-control" asp-for="CategoryName" placeholder="Category name" />
        </div>
        <br />
        <div>
            <input class="btn btn-primary" type="submit" value="Create" />
        </div>
    </form>
</div>
