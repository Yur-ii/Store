@model Store.Models.User
<h3 class="text-center">Personal information</h3>
<br />
<div class="border">
    <h4 id="topline" class="text-center">Profile</h4>
    <hr />
    <div class="form-inline">
        <p class="col-4">
            Foto: 
            @if (Model.Image != null)
            {
                <img class="round" style='width:50px; height:50px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
            }
        </p>
        <form class="form-inline col-8" asp-action="DownloadFoto" asp-controller="Account" method="post" enctype="multipart/form-data">
            <div class="col-6">
                <input name="uploadedFile" type="file" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-sm btn-danger" value="Change image"/>
            </div>
        </form>
    </div>
    <hr />
    <div class="form-inline">
        <p class="col-4">Login:</p>
        <p class="col-4">@Model.UserName</p>
        <form class="col-4" asp-action="ChangeUserName" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Change username
            </button>
        </form>
    </div>
    <hr />
    <div class="form-inline">
        <p class="col-4">Date of birth:</p>
        <p class="col-4">@Model.DateOfBirth.ToString("dd MMMM yyyy")</p>
    </div>
    <hr />
    <div id="bottomline" class="form-inline">
        <p class="col-4">Password:</p>
        <p class="col-4">********</p>
        <form class="col-4" asp-action="ChangePassword" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Change password
            </button>
        </form>
    </div>
</div>
<br />
<div class="border">
    <h4 id="topline" class="text-center">Contact information</h4>
    <hr />
    <div class="form-inline">

        <p class="col-4">Email:</p>
        <p class="col-4">@Model.Email</p>

        <form class="col-4" asp-action="ChangeEmail" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Change email
            </button>
        </form>
    </div>
    <hr />
    <div id="bottomline" class="form-inline">
        <p class="col-4">Phone number:</p>
        <p class="col-4">@Model.PhoneNumber</p>

        <form class="col-4" asp-action="ChangeUserName" asp-route-id="@Model.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
                Change phone number
            </button>
        </form>
    </div>
</div>
<p>@ViewBag.Im</p>
<style>
    .border {
        border-radius: 10px;
    }

    #bottomline {
        margin-bottom: 16px;
    }

    #topline {
        margin-top: 16px;
    }

    p {
        margin: 0px;
    }
    .round{
        border-radius: 50px;
    }
</style>